@model IEnumerable<BookViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-5">
    <h1 class="display-4 mt-5">Welcome To Our Book Store</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row pb-3">
    
    
@foreach(var book in Model)  
{
        <div class="col-lg-3 col-md-6">
            <div class=" row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba ; border-radius:5px;">
                    <div class="card">
                        <img src="~/files/Images/@book.ImageName" class="card-img-top rounded" style="height:350px" />
                    </div>
                    <div class="card-body" style="height:150px">
                        <div class="pl-1">
                            <p class="card-title h5 text-dark">@book.Title</p>
                            <p class="card-title  text-secondary">by &nbsp; @book.Author</p>
                        </div>
                        <div class="pl-1">
                            <p>List Price: <strike><b>@book.Price.ToString("0.00")</b></strike></p>
                        </div>
                        <div class="pl-1">
                            <p>As low As: <b>@book.CommessionPrice.ToString("0.00")</b></p>
                        </div>
                    </div>
                    <br />
                    <div>
                        <a class="btn btn-dark form-control" asp-route-id = "@book.Id" asp-action="Details"> Details
                        </a>
                    </div>
                </div>
            </div>

        </div>
}
</div>
