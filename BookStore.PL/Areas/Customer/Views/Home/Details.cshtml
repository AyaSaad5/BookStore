@model BookViewModel
@{
    ViewData["Title"] = "Details";
}


<div class="text-center my-5">
    <h2 class="display-4 mt-5">Book Info.</h2>
    @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
</div>

<form method ="post" asp-action="Details">
    <input hidden asp-for="@Model.Id" />
    <div class="card container p-1">

        <div class="card-header bg-dark text-light m-lg-0 row mt-1">
            <div class="col-12 col-md-6">
                <h1 class="text-white">@Model.Title</h1>
                <p class="text-white-50">by @Model.Author</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="text-dark badge bg-white pt-2" style="height:30px">@Model.CoverType.Name</span>
                <span class="text-dark badge bg-white pt-2" style="height:30px">@Model.Category.Name</span>
            </div>
        </div>

        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">

                    <div class="col-8 col-lg-8">
                        <div class="row pl-2">
                            <h5 class="text-muted">ISBN : @Model.ISBN</h5>
                        </div>
                        <div class="row pl-2">
                            <h5 class="text-muted pb-2">List Price : <strike>@Model.Price</strike></h5>
                        </div>
                        <div class="row text-center pl-2 " style="color:white" ;>
                            <div class="p-1 col-2 bg-secondary border-bottom ">
                                <div>Quantity</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom ">
                                <div>1-5</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom ">
                                <div>5-10</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom ">
                                <div>+10</div>
                            </div>
                        </div>
                        <div class="row text-center pl-2" style="color:black; font-weight:bold;">
                            <div class="p-1 col-2 bg-secondary  ">
                                <div>@Model.Price</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary  ">
                                <div>@Model.Price.ToString("c")</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary  ">
                                <div>@Model.Price5.ToString("c")</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary  ">
                                <div>@Model.Price10.ToString("c")</div>
                            </div>
                        </div>
                        <div class="row pl-2">
                            <p class="text-secondary">@Model.Description</p>
                        </div>
                        <div class="row pl-2">
                            <div class="col-2 text-dark"><h4>Count</h4></div>
                            <div class="col-10"> <input class="form-control" /> </div>
                        </div>

                    </div>

                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img src="~/files/Images/@Model.ImageName" width="100%" class="rounded" />
                    </div>
                </div>
            </div>
        </div>






        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-secondary form-control" style="height:50px" asp-action="index">Back To Home</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add To Cart" class="btn btn-dark form-control" style="height:50px">Add To Cart</button>
                </div>
            </div>
        </div>
    </div>

</form>


